%h1.white-text.center-align Update Pursuit

= form_for(@pursuit, url: admin_pursuit_path) do |f|
  = f.label :name
  = f.text_field :name
  = f.label :description
  = f.text_area :description
  = f.label :price
  = f.text_field :price
  = f.label :status
  = f.text_field :status
  .waves-effect.waves-light.btn
    = f.submit "Update Pursuit"
