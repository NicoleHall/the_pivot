%h1 Update Pursuit

= form_for(@pursuit, url: admin_pursuit_path) do |f|
  = f.label :name
  = f.text_field :name
  = f.label :description
  = f.text_area :description
  = f.label :price
  = f.text_field :price
  = f.label :status
  = f.text_field :status
  = f.label :image, "Attach an Image"
  = f.file_field :image
  = f.submit "Update Pursuit"
